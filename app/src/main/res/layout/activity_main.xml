<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.mapbox.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="4dp"
        android:padding="4dp"
        app:mapbox_cameraBearing="0.0"
        app:mapbox_cameraPitch="0.0"
        app:mapbox_cameraTargetLat="55.7"
        app:mapbox_cameraTargetLng="37.6"
        app:mapbox_cameraZoom="9.0"
        app:mapbox_locationComponentEnabled="true"
        app:mapbox_locationComponentPuckBearing="heading" />

    <ImageButton
        android:id="@+id/location_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="52dp"
        android:background="@drawable/background_circle"
        android:contentDescription="null"
        android:src="@drawable/location" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="4dp"
        android:layout_gravity="start"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/polygon_id_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/holo_purple"
            android:hint="Введите ID полигона"
            android:padding="8dp"
            android:textSize="14sp"
            android:textColor="@android:color/background_light"
            android:textColorHint="@android:color/background_light" />
        <ImageButton
            android:id="@+id/search_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ECCFF2"
            android:padding="8dp"
            android:contentDescription="search"
            android:src="@drawable/magnifier"
            />


    </LinearLayout>

</FrameLayout>